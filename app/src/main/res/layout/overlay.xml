<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clParent"
    android:background="@color/lightergrey2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btnOpenMainActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/darkergrey2"
        android:text="Open MainActivity"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCloseWindow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/darkergrey2"
        android:text="Close"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnOpenMainActivity"
        app:layout_constraintStart_toStartOf="@+id/btnOpenMainActivity" />

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FOLLOW ANDROID_DEVS"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/btnCloseWindow"
        app:layout_constraintEnd_toEndOf="@+id/btnOpenMainActivity"
        app:layout_constraintStart_toStartOf="@+id/btnOpenMainActivity"
        app:layout_constraintTop_toBottomOf="@+id/btnOpenMainActivity" />
</androidx.constraintlayout.widget.ConstraintLayout>